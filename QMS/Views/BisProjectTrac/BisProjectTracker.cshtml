        font-weight: bold;
    } */

</style>



<div class="content">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large;color: #4682B4;">Bis Project Tracker</b>
            </div>

            <div>
                <button id="addButton" type="button" class="btn btn-outline-success legitRipple mr-2" onclick="openBisProject()" style="width: 140px;font-size:15px">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>
                <button id="backButton" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back
                </button>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="chart-container">
                        <div class="form-group row">
                            <div id="bisProject_Table" class="col-12"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tabulator.js"></script>
    <script src="~/js/tabulator.min.js"></script>
    <script src="~/scripts/bisprojecttracker/bisproject.js" asp-append-version="true"></script>
}

