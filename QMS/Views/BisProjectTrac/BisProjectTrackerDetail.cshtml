@using QMS.Core.Models

@model BisProjectTracViewModel

@{
    ViewData["Title"] = "Add Bis Project Tracker Detail";
}

<link href="~/css/fontawesome/styles.min.css" rel="stylesheet" />
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.datatables.js"></script>
<link href="~/css/pnotify.css" rel="stylesheet" />
<script src="~/js/pnotify.js"></script>
<script src="~/js/pnotify.confirm.js"></script>
<script src="~/lib/bootstrap/dist/js/datatables.buttons.min.js"></script>
<script src="~/lib/bootstrap/dist/js/jszip.min.js"></script>
<script src="~/lib/bootstrap/dist/js/buttons.html5.min.js"></script>
<link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
<style>
    .form-control {
        padding: 0 10px !important;
        border: 0;
        border-bottom: 1px solid #cccccc;
        border-radius: 0px;
    }

    label {
        margin-bottom: 0;
        margin-top: .2rem;
    }

    .notes-section {
        /* border: 1px solid black; */
        padding: 0 10px !important;
    }

    textarea {
        width: 100%;
        border: 1px solid #cccccc;
        border-radius: 4px;
        padding: 0 5px;
    }

    .form-group {
        margin-bottom: 0.5rem;
    }

</style>

<div class="content">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center" style="padding: 0.7rem;">
            <div style="color:#4682B4;font-size:larger;font-weight:650">
                <b>Bis Project Tracker </b>
            </div>
            <div>
                <button type="button" id="saveButton" onclick="InsertUpdateBisProject()" class="btn btn-outline-success">
                    <i class="fas fa-floppy-disk mr-2"></i>Save
                </button>&nbsp;
                <button type="button" class="btn btn-outline-warning" onclick="history.back()">
                    <i class="fas fa-arrow-left mr-2"></i>Back
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12" id="addCard">
            <div class="card col-12" style="border-radius:10px;border:1px solid #4682B4;">
                <div class="col-12 pt-2">
                    <div class="form-group">
                        <input type="hidden" id="hdnId" name="Id" value="@Model?.Id" />
                        <div class="row form-group align-items-center">
                            <label class="col-2 text-end"><b>Financial Year</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-2 mr-2">
                                <input name="Fin_Year" id="Fin_Year" class="form-control" value="@Model?.Financial_Year" />
                            </div>

                            <label class="col-1 text-end"><b>Month/PC</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-2">
                                <input name="Mon_PC" id="Mon_PC" class="form-control" value="@Model?.Mon_Pc" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center">
                            <label class="col-2 text-end"><b>Nature of Project</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="Nat_Project" id="Nat_Project" class="form-control" value="@Model?.Nat_Project" />
                            </div>
                            <label class="col-2 text-end"><b> Lead Model Number</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input name="Lea_Model_No" id="Lea_Model_No" class="form-control" value="@Model?.Lea_Model_No" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center">
                            <label class="col-2 text-end"><b>No of Series Added</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="No_Seri_Add" id="No_Seri_Add" class="form-control" value="@Model?.No_Seri_Add" />
                            </div>
                            <label class="col-2 text-end"><b>Cat Reference of Lead Model</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input name="Cat_Ref_Lea_Model" id="Cat_Ref_Lea_Model" class="form-control" value="@Model?.Cat_Ref_Lea_Model" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center">
                            <label class="col-2 text-end"><b>Section</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="Section" id="Section" class="form-control" value="@Model?.Section" />
                            </div>
                            <label class="col-2 text-end"><b>Manufacturing Location</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input name="Manuf_Location" id="Manuf_Location" class="form-control" value="@Model?.Manuf_Location" />
                            </div>

                        </div>
                        <div class="row form-group align-items-center mb-2">
                            <label class="col-2 text-end"><b>CCL ID</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="CCL_Id" id="CCL_Id" class="form-control" value="@Model?.CCL_Id" />
                            </div>
                            <label class="col-2 text-end"><b>Lab</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input name="Lab" id="Lab" class="form-control" value="@Model?.Lab" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center mb-2">
                            <label class="col-2 text-end"><b>Report Owner</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="Report_Owner" id="Report_Owner" class="form-control" value="@Model?.Report_Owner" />
                            </div>
                            <label class="col-2 text-end"><b>Test Start Date</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input type="date" name="Start_Date" id="Start_Date" class="form-control" value="@Model?.Start_Date" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center mb-2">
                            <label class="col-2 text-end"><b>Test Completed Date</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input type="date" name="Comp_Date" id="Comp_Date" class="form-control" value="@Model?.Comp_Date" />
                            </div>
                            <label class="col-2 text-end"><b>Test Duration</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input name="Test_Duration" id="Test_Duration" class="form-control" value="@Model?.Test_Duration" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center mb-2">
                            <label class="col-2 text-end"><b>BIS submitted date</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input type="date" name="Submitted_Date" id="Submitted_Date" class="form-control" value="@Model?.Submitted_Date" />
                            </div>
                            <label class="col-2 text-end"><b>BIS Received Date</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input type="date" name="Received_Date" id="Received_Date" class="form-control" value="@Model?.Received_Date" />
                            </div>
                        </div>
                        <div class="row form-group align-items-center mb-2">
                            <label class="col-2 text-end"><b>BIS duration</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3 mr-5">
                                <input name="Bis_Duration" id="Bis_Duration" class="form-control" value="@Model?.Bis_Duration" />
                            </div>
                            <label class="col-2 text-end"><b>First Dispatch date</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                            <div class="col-3">
                                <input type="date" name="Dispatch_Date" id="Dispatch_Date" class="form-control" value="@Model?.Dispatch_Date" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card col-12" style="border-radius:10px;border:1px solid #4682B4;">
                <div class="col-12 pt-1">
                    <label class="col-1 text-end"><b>Remark</b></label><div class="font-weight-bold" style="padding-top: 10px;">:</div>
                    <div class="col-10" style="margin-bottom: 20px;">
                        <textarea name="Remark" id="Remark" class="form-control" rows="2">@Model?.Remark</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/bisprojecttracker/bisprojectdetail.js" asp-append-version="true"></script>
}