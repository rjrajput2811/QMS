                // Create delete (trash) button that will be appended beside Sr. No
                function createDeleteButton() {
                    const btn = document.createElement('button');
                    btn.className = 'row-del-btn';
                    btn.title = 'Delete this row';
                    btn.innerHTML = '<i class="fa fa-trash"></i>';
                    Object.assign(btn.style, {
                        background: 'transparent',
                        border: 'none',
                        cursor: 'pointer',
                        color: 'red',
                        fontSize: '15px',
                        marginLeft: '6px'
                    });
                    btn.addEventListener('click', function () {
                        const tr = btn.closest('tr');
                        if (tr) {
                            tr.remove();
                            renumberRows();
                        }
                    });
                    return btn;
                }

                // Renumber Sr. No. and attach bin beside number
                function renumberRows() {
                    Array.from(tableBody.rows).forEach((row, index) => {
                        const srCell = row.cells[0];
                        // clear cell and set new index then append delete button
                        srCell.innerHTML = '';
                        srCell.textContent = (index + 1);
                        srCell.appendChild(createDeleteButton());
                        srCell.style.textAlign = 'center';
                    });
                }

                // Add new row: Sr. No cell (will be filled by renumberRows), Parameter, Observations
                function addRow() {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td style="border:1.5px solid #000; text-align:center;"></td>
                        <td style="border:1.5px solid #000;" contenteditable="true"></td>
                        <td style="border:1.5px solid #000;" contenteditable="true"></td>
                    `;
                    tableBody.appendChild(tr);
                    renumberRows();
                    // optionally focus the new parameter cell
                    const newRow = tableBody.lastElementChild;
                    if (newRow) {
                        const paramCell = newRow.cells[1];
                        if (paramCell) paramCell.focus();
                    }
                }

                // Initialize existing rows (attach delete buttons + numbering)
                function init() {
                    renumberRows();
                }

                if (addBtn) addBtn.addEventListener('click', addRow);
                init();
