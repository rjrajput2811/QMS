@{
    ViewData["Title"] = "Dashboard";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>

    .tiles {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        width: 100%;
    }

    .tile {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .tile-icon {
        font-size: 24px;
        color: #6c757d;
    }

    .tile-data h3 {
        margin: 0;
        font-size: 24px;
        color: #333;
    }

    .tile-data p {
        margin: 0;
        font-size: 14px;
        color: #777;
    }

    .chart-section {
        width: 100%;
        padding: 10px;
    }

    .tile, .card {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

</style>

<div class="content">
    <div class="row">
        <div class="col-xl-5">
            <h2 style="text-align:center">Coming Soon</h2>
        </div>
    </div>
</div>

