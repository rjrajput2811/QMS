@section Scripts {
    <script src="~/js/select2.min.js"></script>
    <script>

         var tabledata = [];
         var table = '';


         $(document).ready(function () {

             $('#upload-button').on('click', async function () {

                    var expectedColumns = ['Sr. No.','MATERIAL NO', 'REF CODE', 'MATERIAL DESC', 'TOG', 'TOR', 'TOY', 'SPIKE THRESHOLD', 'MATERIAL CATEGORY'];

