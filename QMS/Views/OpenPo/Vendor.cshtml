                Key : headerData.Key,
                Key1 : headerData.Key1,
                DeliveryScheduleList: mappedData
            };

            $.ajax({
                type: "POST",
                url: '@Url.Action("SaveDeliverySchedule", "OpenPo")',
                data: JSON.stringify(request),
                contentType: "application/json",
                success: function () {
                    Blockloaderhide();
