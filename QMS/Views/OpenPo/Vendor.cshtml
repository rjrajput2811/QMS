            const balanceQty = parseFloat(headerData.Balance_Qty) || 0;

            // --- Basic validations ---
            for (let i = 0; i < data.length; i++) {
                const row = data[i];

                // Remarks mandatory if Delivery_Date is blank
                if (!row.Delivery_Date && (!row.Delivery_Remark || String(row.Delivery_Remark).trim() === "")) {
