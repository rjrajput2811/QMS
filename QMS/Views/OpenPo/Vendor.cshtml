                Delivery_Date: row.Delivery_Date ? new Date(row.Delivery_Date) : null,
                Delivery_Qty: (row.Delivery_Qty !== undefined && row.Delivery_Qty !== null && String(row.Delivery_Qty).trim() !== "")
