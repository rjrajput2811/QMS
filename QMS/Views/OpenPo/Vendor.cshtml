                        function setIsSubmitted() {
            debugger;
            Blockloadershow();

            const selectedRows = table.getData().filter(row => row.Selected);

            // Check if no rows are selected
            if (selectedRows.length === 0) {
                Blockloaderhide();
                showDangerAlert('Please select at least one record to submit.');
                return;
            }

            // Validation: Check all selected rows and their children
            const validationErrors = [];

            selectedRows.forEach((row, index) => {
                const rowIdentifier = `Row ${index + 1} (PO No: ${row.PO_No || 'N/A'}, Key: ${row.Key || 'N/A'})`;
                const children = Array.isArray(row._children) ? row._children : [];
                const realChildren = children.filter(ch => !ch?._isChildHeader);

                // If no delivery schedule exists
                if (realChildren.length === 0) {
                    validationErrors.push({
                        RowNumber: index + 1,
                        Key: row.Key || '',
                        PRNo: row.PR_No || '',
                        PONo: row.PO_No || '',
                        Vendor: row.Vendor || '',
                        DeliveryScheduleNo: 'N/A',
                        ErrorType: 'Missing Delivery Schedule',
                        ErrorMessage: 'No delivery schedule found. Please add at least one delivery schedule.',
                        DeliveryDate: '',
                        DeliveryQty: '',
                        DeliveryRemark: ''
                    });
                    return;
                }

                // Check each child delivery schedule
                realChildren.forEach((child, childIndex) => {
                    const hasDeliveryDate = child.Delivery_Date && String(child.Delivery_Date).trim() !== "";
                    const hasDeliveryQty = child.Hold_Date != null && String(child.Hold_Date).trim() !== "" && child.Hold_Date !== 0;
                    const hasDeliveryRemark = child.Cleared_Date && String(child.Cleared_Date).trim() !== "";

                    let errorType = '';
                    let errorMessage = '';

                    // Validation Rule 1: If Delivery_Date exists, Delivery_Qty must exist
                    if (hasDeliveryDate && !hasDeliveryQty) {
                        errorType = 'Missing Delivery Qty';
                        errorMessage = 'Delivery Date is provided but Delivery Qty is missing.';
                    }
                    // Validation Rule 1: If Delivery_Qty exists, Delivery_Date must exist
                    else if (hasDeliveryQty && !hasDeliveryDate) {
                        errorType = 'Missing Delivery Date';
                        errorMessage = 'Delivery Qty is provided but Delivery Date is missing.';
                    }
                    // Validation Rule 2 & 3: If neither Date nor Qty exist, Remark must exist
                    else if (!hasDeliveryDate && !hasDeliveryQty && !hasDeliveryRemark) {
                        errorType = 'All Fields Empty';
                        errorMessage = 'All fields (Delivery Date, Qty, and Remark) are empty. Please fill at least Delivery Date & Qty OR Remark.';
                    }

                    // If there's an error, add to validation errors array
                    if (errorType) {
                        validationErrors.push({
                            RowNumber: index + 1,
                            Key: row.Key || '',
                            PRNo: row.PR_No || '',
                            PONo: row.PO_No || '',
                            Vendor: row.Vendor || '',
                            DeliveryScheduleNo: childIndex + 1,
                            ErrorType: errorType,
                            ErrorMessage: errorMessage,
                            DeliveryDate: child.Delivery_Date || '',
                            DeliveryQty: child.Hold_Date || '',
                            DeliveryRemark: child.Cleared_Date || ''
                        });
                    }
                });
            });

            // If validation errors exist, generate Excel log and stop submission
            if (validationErrors.length > 0) {
                Blockloaderhide();

                // Generate Excel Error Log
                generateValidationErrorExcel(validationErrors);

                // Clear selections after showing errors
                clearAllSelections();

                // Show summary alert
                showDangerAlert(`Validation Failed: ${validationErrors.length} error(s) found.\n\nAn Excel error log has been downloaded. Please fix the errors and try again.`);
                return;
            }

            // Proceed with submission if validation passes
            const selectedIds = selectedRows.map(row => row.Id);

            $.ajax({
                type: "POST",
                url: '@Url.Action("SetIsSubmitted", "OpenPo")',
                data: JSON.stringify(selectedIds),
                contentType: "application/json",
                success: function (response) {
                    Blockloaderhide();
                    if (response.success) {
                        showSuccessAlert("Delivery Schedule is submitted successfully!");

                        // Clear all selections after successful submission
                        clearAllSelections();

                        setTimeout(function () {
                            window.location.reload();
                        }, 1500);
                    }
                    else {
                        var errorMessg = "";
                        for (var error in response.errors) {
                            errorMessg += error + "\n";
                        }
                        if (errorMessg != "") {
                            showDangerAlert(errorMessg);
                        }
                        else {
                            showDangerAlert(response.Message);
                        }
                    }
                },
                error: function (xhr, status, errors) {
                    Blockloaderhide();
                    showDangerAlert("An unexpected error occurred, please refresh the page and try again.");
                }
            });
        }

