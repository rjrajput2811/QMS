@{
    ViewData["Title"] = "Drop Test Report";
}

<link href="~/css/tabulator/tabulator.min.css" rel="stylesheet" />
<script src="~/js/tabulator.min.js"></script>
    <style>
        :root {
            --bg: #ffffff;
            --text: #111111;
            --muted: #666666;
            --border: #dcdcdc;
            --stripe: #f7f7f7;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 24px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif;
            background: var(--bg);
            color: var(--text);
            line-height: 1.4;
        }

        h1 {
            margin: 0 0 16px 0;
            font-weight: 600;
            font-size: 20px;
        }

        .table-wrap {
            width: 100%;
            overflow: auto;
            border: 1px solid var(--border);
            border-radius: 12px;
            background: #fff;
        }

        table.data-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 720px;
        }

            table.data-table thead th {
                position: sticky;
                top: 0;
                background: #fafafa;
                color: #222;
                font-weight: 600;
                text-align: left;
                border-bottom: 1px solid var(--border);
                padding: 10px 12px;
                white-space: nowrap;
            }

            table.data-table tbody td {
                border-bottom: 1px solid var(--border);
                padding: 10px 12px;
                vertical-align: top;
            }

            table.data-table tbody tr:nth-child(even) {
                background: var(--stripe);
            }

        .meta {
            margin-bottom: 12px;
            color: var(--muted);
            font-size: 12px;
        }
    </style>
<div class="card shadow-sm mb-3" style="border-radius:8px; border:1px solid #ccc;">
    <div class="card-body d-flex justify-content-between align-items-center py-3" style="min-height:80px;">

        <!-- Title -->
        <div>
            <b style="font-size:x-large; color:#4682B4;">
                Drop Test Report
            </b>
        </div>

        <!-- Buttons -->
        <div>
            <button id="saveDropTestButton"
                    type="button"
                    class="btn btn-outline-success legitRipple mr-2"
                    onclick="saveDropTest()"
                    style="width:120px; font-size:15px;">
                <i class="fas fa-save mr-1"></i>Save
            </button>

            <a href='@Url.Action("DropTestReport", "ProductValidation")'
               class="btn btn-outline-primary"
               style="width:120px; font-size:15px;">
                <i class="fas fa-arrow-left"></i> BACK
            </a>
        </div>
    </div>
</div>
   
    <div class="table-wrap">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Column 1</th>
                    <th>Column 2</th>
                    <th>Column 3</th>
                    <th>Column 4</th>
                    <!-- Add or rename columns as per your sheet -->
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Sample 1</td>
                    <td>Value A</td>
                    <td>Pass</td>
                    <td>Notes...</td>
                </tr>
                <tr>
                    <td>Sample 2</td>
                    <td>Value B</td>
                    <td>Fail</td>
                    <td>Observation...</td>
                </tr>
                <!-- Add more rows dynamically or paste data here -->
            </tbody>
        </table>
    </div>

@section HideSidebar { }
