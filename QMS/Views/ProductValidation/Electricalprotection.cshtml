<div class="content">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large; color: #4682B4;">Electrical Protection</b>
            </div>
            <div>
                <button id="addPhyCheckButton" type="button" class="btn btn-outline-success legitRipple mr-2"
                        onclick="location.href='@Url.Action("Electricalprotectiondetails", "ProductValidation")'"
                        style="width: 140px; font-size:15px">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>
                <button id="backButton" class="btn btn-outline-primary"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="chart-container">
                        <div id="electrical_table_wrapper" style="overflow-x: auto; width:100%; float:left;">
                            <div id="electrical_table"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        <script src="~/js/tabulator.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/exceljs@4.4.0/dist/exceljs.min.js"></script>

        <script asp-append-version="true">

            var tabledata = [];
            var table = null;

            $(document).ready(function () {
                loadElectricalGrid();
            });

            function loadElectricalGrid() {
                Blockloadershow();
                $.ajax({
                    url: '@Url.Action("GetElectricalProtectionList", "ProductValidation")',
                    type: 'GET',
                    success: function (data) {
                        Blockloaderhide();
                        if (data && Array.isArray(data)) {
                            OnElectricalGridLoad(data);
                        } else {
                            showDangerAlert('No data found for Electrical Protection.');
                        }
                    },
                    error: function (xhr, status, error) {
                        Blockloaderhide();
                        showDangerAlert('Error loading data: ' + error);
                    }
                });
            }

            // ✅ Column Hide Menu
            var headerMenu = function () {
                var menu = [];
                var columns = this.getColumns();

                for (let column of columns) {
                    let icon = document.createElement("i");
                    icon.classList.add("fas", column.isVisible() ? "fa-check-square" : "fa-square");

                    let label = document.createElement("span");
                    let title = document.createElement("span");
                    title.textContent = " " + column.getDefinition().title;

                    label.appendChild(icon);
                    label.appendChild(title);

                    menu.push({
                        label: label,
                        action: function (e) {
                            e.stopPropagation();
                            column.toggle();

                            icon.classList.toggle("fa-square");
                            icon.classList.toggle("fa-check-square");
                        }
                    });
                }
                return menu;
            };


            function OnElectricalGridLoad(response) {
                tabledata = [];
                let columns = [];

                $.each(response, function (index, item) {
                    let reportDate = item.reportDate
                        ? new Date(item.reportDate).toLocaleDateString("en-GB")
                        : "";

                    tabledata.push({
                        Sr_No: index + 1,
                        Id: item.id,
                        ProductCatRef: item.productCatRef,
                        ProductDescription: item.productDescription,
                        Report_No: item.reportNo,
                        Report_Date: reportDate,
                        BatchCode: item.batchCode,
                        PKD: item.pkd,
                        LightSourceDetails: item.lightSourceDetails,
                        DriverDetailsQty: item.driverDetailsQty,
                        PCBDetailsQty: item.pcbDetailsQty,
                        LEDCombinations: item.ledCombinations,
                        SensorDetailsQty: item.sensorDetailsQty,
                        LampDetails: item.lampDetails
                    });
                });

                columns = [
                    {
                        title: "Action",
                        field: "Action",
                        width: 125,
                        headerMenu: headerMenu,
                        hozAlign: "center",
                        formatter: function (cell) {
                            const row = cell.getRow().getData();
                            return `
                                        <i onclick="deleteElectrical(${row.Id})" class="fas fa-trash-alt" title="Delete" style="color:red;cursor:pointer;margin-right:8px;"></i>
                                        <i onclick="exportElectrical(${row.Id})" class="fas fa-file-excel" title="Export Excel" style="color:green;cursor:pointer;"></i>
                                    `;
                        }
                    },
                    { title: "SNo", field: "Sr_No", width: 100, sorter: "number", headerMenu: headerMenu, hozAlign: "center" },
              

                    { title: "Product Category Ref", field: "ProductCatRef", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "Product Description", field: "ProductDescription", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },

                    { title: "Report No", field: "Report_No", width: 150, headerMenu: headerMenu, headerFilter: "input", hozAlign: "center" },
                    { title: "Report Date", field: "Report_Date", width: 130, headerMenu: headerMenu, headerFilter: "input", hozAlign: "center" },
                    { title: "Batch Code", field: "BatchCode", width: 150, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },

                    { title: "Light Source Details", field: "LightSourceDetails", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "Driver Details & Qty", field: "DriverDetailsQty", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "PCB Details & Qty", field: "PCBDetailsQty", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "LED Combinations", field: "LEDCombinations", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "Sensor Details & Qty", field: "SensorDetailsQty", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },
                    { title: "Lamp Details", field: "LampDetails", width: 200, headerMenu: headerMenu, headerFilter: "input", hozAlign: "left" },

                    { title: "PKD", field: "PKD", width: 120, headerMenu: headerMenu, headerFilter: "input", hozAlign: "center" },





                ];

           
                table = new Tabulator("#electrical_table", {
                    data: tabledata,
                    layout: "fitColumns",
                    movableColumns: true,
                    pagination: "local",
                    paginationSize: 10, // show all rows
                    paginationSizeSelector: [10, 50, 100, 500, { label: "All", value: true }],
                    paginationCounter: "rows",
                    columns: columns
                });

              debugger
                table.on("cellClick", function (e, cell) {
                    if (cell.getColumn().getField() !== "Action") {
                        let id = cell.getRow().getData().Id;
                        window.location.href = "/ProductValidation/ElectricalProtectionDetails/" + id;
                    }
                });
            }
            function deleteElectrical(recid) {
                PNotify.prototype.options.styling = "bootstrap3";
                (new PNotify({
                    title: 'Confirmation Needed',
                    text: 'Are you sure to delete? It will not delete if this record is used in transactions.',
                    icon: 'glyphicon glyphicon-question-sign',
                    hide: false,
                    confirm: { confirm: true },
                    buttons: { closer: false, sticker: false },
                    history: { history: false }
                }))
                    .get()
                    .on('pnotify.confirm', function () {
                        $.ajax({
                            url: '@Url.Action("DeleteElectricalProtection", "ProductValidation")',
                            type: 'POST',
                            data: { Id: recid },
                            success: function (data) {
                                if (data.success) {
                                    showSuccessAlert("Deleted successfully.");
                                    setTimeout(() => location.reload(), 2000);
                                } else {
                                    showDangerAlert(data.message);
                                }
                            },
                            error: function () {
                                showDangerAlert('Error deleting data.');
                            }
                        });
                    })
                    .on('pnotify.cancel', function () {
                        loadElectricalGrid(); // Reload table only
                    });
            }
            // ✅ Export Excel call
            function exportElectrical(id) {
                Blockloadershow();
                $.ajax({
                    url: '@Url.Action("ExportElectricalToExcel", "ProductValidation")',
                    type: 'POST',
                    data: { Id: id },
                    xhrFields: { responseType: 'blob' },
                    success: function (data) {
                        var link = document.createElement('a');
                        link.href = URL.createObjectURL(new Blob([data]));
                        link.download = "ElectricalProtection.xlsx";
                        link.click();
                    },
                    complete: Blockloaderhide
                });
            }
        </script>
    }

    


   
</div>



