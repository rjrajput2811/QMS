                                    <div style="flex:1;">
                                        <div style="margin-bottom:6px;">2.&nbsp;&nbsp;Live parts accessibility</div>
                                    </div>
                                    <div style="width:140px;">
                                        <select aria-label="Live parts accessibility" class="form-control" style="width:100%; padding:6px;" id="liveParts">
                                            <option value="">Select</option>
                                            <option value="yes">YES</option>
                                            <option value="no">NO</option>
                                        </select>
