@{
    ViewData["Title"] = "Impact Test (Pendulum type)";
}

<style>
    .header-card {
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .header-title {
        font-size: large;
        color: #4682B4;
        font-weight: 700;
    }

    .header-btn {
        width: 140px;
        font-size: 15px;
        border-radius: 6px;
        transition: all 0.2s ease-in-out;
    }

        .header-btn:hover {
            transform: scale(1.05);
        }

    .mr-2 {
        margin-right: 8px;
    }
</style>

<div class="content">
    <div class="card shadow-sm mb-3 header-card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b class="header-title">Impact Test (Pendulum type)</b>
            </div>
            <div>
                <button id="addImpactButton"
                        type="button"
                        class="btn btn-outline-success legitRipple mr-2 header-btn"
                        onclick="location.href='@Url.Action("ImpactTestDetails", "ProductValidation")'">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>

                <button id="backButton"
                        type="button"
                        class="btn btn-outline-primary header-btn"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

    <!-- main card/body for the rest of page content -->
    <div class="card shadow-sm mb-3" style="border-radius:8px; border:1px solid #ccc;">
        <div class="card-body">
            <div class="table-responsive">
                <!-- Put your table or page content here -->
                <p style="margin:0;">No data to display. Use the Add button to create a new Impact Test entry.</p>
            </div>
        </div>
    </div>
</div>


