@{
    ViewData["Title"] = "Validation Open Points Closure Report";
}

<style>
    .header-card {
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .header-title {
        font-size: large;
        color: #4682B4;
        font-weight: 700;
    }

    .header-btn {
        width: 140px;
        font-size: 15px;
        border-radius: 6px;
        transition: all 0.2s ease-in-out;
    }

        .header-btn:hover {
            transform: scale(1.05);
        }

    .mr-2 {
        margin-right: 8px;
    }
</style>

<div class="content">

    <!-- PAGE TITLE CARD -->
    <div class="card shadow-sm mb-3 header-card">
        <div class="card-body d-flex justify-content-between align-items-center">

            <!-- LEFT TITLE -->
            <div>
                <b class="header-title">Validation Open Points Closure Report</b>
            </div>

            <!-- RIGHT BUTTONS -->
            <div>

                <button id="addClosureButton"
                        type="button"
                        class="btn btn-outline-success legitRipple mr-2 header-btn"
                        onclick="location.href='@Url.Action("OpenPointClosureReportDetails", "ProductValidation", new { id = 0 })'">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>

                <button id="backButton"
                        type="button"
                        class="btn btn-outline-primary header-btn"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>

            </div>
        </div>
    </div>

    <!-- You may add the listing table here if needed -->

</div>

@section HideSidebar { }
