@{
    ViewData["Title"] = "Photometry Test Report";
}

<!-- CSS: matches Surge Test & Electrical Protection header design -->
<style>
    .header-card {
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .header-title {
        font-size: x-large; /* more readable and consistent with Electrical Protection */
        color: #4682B4;
        font-weight: 700;
    }

    .header-btn {
        width: 140px;
        font-size: 15px;
        border-radius: 6px;
    }

    .mr-2 {
        margin-right: 8px;
    }
</style>

<div class="content">
    <!-- Header Card -->
    <div class="card shadow-sm mb-3 header-card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b class="header-title">Photometry Test Report</b>
            </div>
            <div>
                <!-- Add Button -->
                <button id="addPhotometryButton"
                        type="button"
                        class="btn btn-outline-success legitRipple mr-2 header-btn"
                        onclick="location.href='@Url.Action("PhotometryTestReportDetails", "ProductValidation")'">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>

                <!-- Back Button -->
                <button id="backButton"
                        type="button"
                        class="btn btn-outline-primary header-btn"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

