    table.table-bordered {
        border-collapse: collapse;
        font-size: 14px;
        width: 100%;
    }

        table.table-bordered th, table.table-bordered td {
            border: 1px solid #000 !important;
            vertical-align: middle;
            padding: 8px;
        }

        table.table-bordered thead th {
            background-color: #f7f8fa !important;
            font-weight: 600;
            color: #000;
            text-align: center;
        }

    .table-legal {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed;
    }

        .table-legal th,
        .table-legal td {
            border: 1.5px solid #000;
            padding: 8px 10px;
            vertical-align: middle;
            text-align: left;
            box-sizing: border-box;
        }

        /* Table header */
        .table-legal thead th {
            background-color: #f8f9fa;
            font-weight: 700;
            color: #000;
            text-align: center;
        }

        /* Column specific look */
        .table-legal th:nth-child(3) {
            color: red;
            text-align: center;
        }

        .table-legal th:nth-child(1),
        .table-legal th:nth-child(2) {
            text-align: left;
        }

        .table-legal th:nth-child(4) {
            text-align: center;
        }

    /* Dropdown inside "Result" column */
    .soft-select.small {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        display: inline-block;
        width: 10%;
        min-width: 120px;
        padding: 6px 25px 6px 9px;
        font-size: 13px;
        color: #111;
        background-color: #fff;
        border: none;
        border-bottom: 1.8px solid #cfd9e3;
