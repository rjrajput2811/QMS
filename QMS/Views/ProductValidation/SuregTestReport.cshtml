@{
    ViewData["Title"] = "Surge Test";
}

<!-- CSS: reuse your button/card look -->
<style>
    .header-card {
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .header-title {
        font-size: large;
        color: #4682B4;
        font-weight: 700;
    }

    .header-btn {
        width: 140px;
        font-size: 15px;
        border-radius: 6px;
    }

    .mr-2 {
        margin-right: 8px;
    }
</style>

<div class="content">
    <div class="card shadow-sm mb-3 header-card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b class="header-title">Surge Test</b>
            </div>
            <div>
                <!-- Add goes directly to Surge Test (NOT a details-before page) -->
                <button id="addSurgeButton"
                        type="button"
                        class="btn btn-outline-success legitRipple mr-2 header-btn"
                        onclick="location.href='@Url.Action("SurgeTestReportDetails", "ProductValidation")'">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>

                <button id="backButton"
                        type="button"
                        class="btn btn-outline-primary header-btn"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

