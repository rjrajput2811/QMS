@{
    ViewData["Title"] = "Temperature Rise Test of Luminaire (TRT)";
}

<!-- CSS: Consistent with all test report headers -->
<style>
    .header-card {
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .header-title {
        font-size: large; /* same as Electrical Protection for consistency */
        color: #4682B4;
        font-weight: 700;
    }

    .header-btn {
        width: 140px;
        font-size: 15px;
        border-radius: 6px;
        transition: all 0.2s ease-in-out;
    }

        .header-btn:hover {
            transform: scale(1.05);
        }

    .mr-2 {
        margin-right: 8px;
    }
</style>

<div class="content">
    <!-- Header Card -->
    <div class="card shadow-sm mb-3 header-card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b class="header-title">Temperature Rise Test of Luminaire (TRT)</b>
            </div>

            <div>
                <!-- Add Button -->
                <button id="addTRTButton"
                        type="button"
                        class="btn btn-outline-success legitRipple mr-2 header-btn"
                        onclick="location.href='@Url.Action("TemperatureRiseTestOfLuminaireDetails", "ProductValidation")'">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>

                <!-- Back Button -->
                <button id="backButton"
                        type="button"
                        class="btn btn-outline-primary header-btn"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

