@{
    ViewData["Title"] = "Six Sigma Indices Report";
}

<!-- CSS files -->
<link href="~/css/fontawesome/styles.min.css" rel="stylesheet" />
<link href="~/css/pnotify.css" rel="stylesheet" />
<link href="~/css/tabulator/tabulator.min.css" rel="stylesheet" />
<link href="~/css/tabulator/tabulator_bootstrap4.min.css" rel="stylesheet" />

<style>
    .nav-pills .nav-link {
        text-align: left;
        border-radius: 0;
        border-left: 4px solid transparent;
        font-weight: 500;
        width: 100%;
        padding: 12px;
        background-color: #fff;
        color: #333;
        margin-bottom: 4px;
    }

        .nav-pills .nav-link.active {
            background-color: #f4f3f8;
            border-left: 4px solid #645394;
            color: #645394;
            font-weight: bold;
        }

    .form-control {
        padding: 0 10px !important;
        border: 0;
        border-bottom: 1px solid #cccccc;
        border-radius: 0px;
    }

    label {
        margin-bottom: 0;
        margin-top: .3rem;
    }

    #scrollToTopBtn:hover {
        background-color: #0056b3;
    }

    #scrollToTopBtn {
        outline: none;
    }

    .form-group {
        margin-bottom: 0.5rem;
    }

    .calendar-container {
        cursor: pointer;
        padding: 8px 8px;
        width: 100%;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        transition: background-color 0.3s, box-shadow 0.3s;
        gap: 8px;
        border: 1px solid slategray;
    }

        .calendar-container:hover {
            background-color: #e3f2fd;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .calendar-container i.fa-calendar {
            color: #2196f3;
            font-size: 1.2em;
            padding-left: 20px;
        }

        .calendar-container span {
            color: #4682B4;
            margin: 0;
            font-size: 14px;
        }

    /* Tabulator styling similar to Electrical page */
    .tabulator .tabulator-header .tabulator-col {
        font-size: 14px;
        background-color: #D6E4F0;
        font-weight: 600;
        border-right: 1px solid #ccc;
    }

    .tabulator-row .tabulator-cell {
        padding: 5px 5px;
        font-size: 14px;
        height: 35px;
    }

    .tabulator-cell:hover {
        color: #4682B4 !important;
        cursor: pointer !important;
        font-weight: bold;
    }
</style>

<div class="content">
    <!-- HEADER CARD -->
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large; color: #4682B4;">SEE Indices Format</b>
            </div>
            <div>
                <button id="addPhyCheckButton" type="button" class="btn btn-outline-success legitRipple mr-2"
                        onclick="location.href='@Url.Action("SEEIndicesDetails", "SEEIndices")'"
                        style="width: 140px; font-size:15px">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>
                <button id="backButton" class="btn btn-outline-primary"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

    <!-- GRID CARD -->
    <div class="row mt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div id="seeindices_table_wrapper" style="overflow-x:auto; width:100%; float:left;">
                        <div id="seeindices_table"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tabulator.min.js"></script>
    <script src="~/js/pnotify.js"></script>
    <script src="~/js/pnotify.buttons.js"></script>
    <script src="~/js/pnotify.confirm.js"></script>

    <!-- Optional libs (only if you really need them here) -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/exceljs@4.4.0/dist/exceljs.min.js"></script>

    <script asp-append-version="true">
        var seeIndicesTable = null;
        var seeIndicesData = [];

        $(document).ready(function () {
            loadSEEIndicesGrid();
        });

        function loadSEEIndicesGrid() {
            if (typeof Blockloadershow === "function") {
                Blockloadershow();
            }

            $.ajax({
                url: '@Url.Action("GetSEEIndicesList", "SEEIndices")',
                type: 'GET',
                success: function (data) {
                    if (typeof Blockloaderhide === "function") {
                        Blockloaderhide();
                    }

                    if (data && Array.isArray(data)) {
                        onSEEIndicesGridLoad(data);
                    } else {
                        showDangerAlert('No data found for SEE Indices.');
                    }
                },
                error: function (xhr, status, error) {
                    if (typeof Blockloaderhide === "function") {
                        Blockloaderhide();
                    }
                    showDangerAlert('Error loading data: ' + error);
                }
            });
        }

        // Reusable header menu for hide/show columns
        var headerMenu = function () {
            var menu = [];
            var columns = this.getColumns();

            for (let column of columns) {
                let icon = document.createElement("i");
                icon.classList.add("fas", column.isVisible() ? "fa-check-square" : "fa-square");

                let label = document.createElement("span");
                let title = document.createElement("span");
                title.textContent = " " + column.getDefinition().title;

                label.appendChild(icon);
                label.appendChild(title);

                menu.push({
                    label: label,
                    action: function (e) {
                        e.stopPropagation();
                        column.toggle();

                        icon.classList.toggle("fa-square");
                        icon.classList.toggle("fa-check-square");
                    }
                });
            }
            return menu;
        };

        function onSEEIndicesGridLoad(response) {
            seeIndicesData = [];
            let columns = [];

            $.each(response, function (index, item) {
                // Adjust these property names to match what your controller returns
                let createdDate = item.createdDate
                    ? new Date(item.createdDate).toLocaleDateString("en-GB")
                    : "";

                seeIndicesData.push({
                    Sr_No: index + 1,
                    Id: item.id,
                    Fy: item.fy,
                    Pc: item.pc,
                    Location: item.location,
                    CreatedDate: createdDate
                });
            });

            // 🔹 Only Action, SNo, FY, PC, Location, Created Date
            columns = [
                {
                    title: "Action",
                    field: "Action",
                    width: 130,
                    headerMenu: headerMenu,
                    hozAlign: "center",
                    formatter: function (cell) {
                        const row = cell.getRow().getData();
                        return `
                            <i onclick="deleteSEEIndex(${row.Id})"
                               class="fas fa-trash-alt"
                               title="Delete"
                               style="color:red;cursor:pointer;margin-right:8px;"></i>
                             <a href="/SEEIndices/ExportSixSigmaIndicesToExcel?id=${row.Id}"
                               title="Export Excel"
                               style="color:green;cursor:pointer;">
                                <i class="fas fa-file-excel"></i>
                            </a>
                        `;
                    }
                },
                {
                    title: "SNo",
                    field: "Sr_No",
                    width: 120,
                    sorter: "number",
                    headerMenu: headerMenu,
                    hozAlign: "center"
                },
                {
                    title: "FY",
                    field: "Fy",
                    headerMenu: headerMenu,
                    headerFilter: "input",
                    hozAlign: "center"
                },
                {
                    title: "PC",
                    field: "Pc",
                    headerMenu: headerMenu,
                    headerFilter: "input",
                    hozAlign: "center"
                },
                {
                    title: "Location",
                    field: "Location",
                    headerMenu: headerMenu,
                    headerFilter: "input",
                    hozAlign: "left"
                },
                {
                    title: "Created Date",
                    field: "CreatedDate",
                    headerMenu: headerMenu,
                    headerFilter: "input",
                    hozAlign: "center"
                }
            ];

            seeIndicesTable = new Tabulator("#seeindices_table", {
                data: seeIndicesData,
                layout: "fitColumns",
                movableColumns: true,
                pagination: "local",
                paginationSize: 10,
                paginationSizeSelector: [10, 50, 100, 500, { label: "All", value: true }],
                paginationCounter: "rows",
                columns: columns
            });

            // Click on row (except Action column) opens details
            seeIndicesTable.on("cellClick", function (e, cell) {
                if (cell.getColumn().getField() !== "Action") {
                    let id = cell.getRow().getData().Id;
                    window.location.href = "/SEEIndices/SEEIndicesDetails/" + id;
                }
            });
        }

        function deleteSEEIndex(recid) {
            console.log("deleteSEEIndex called with Id =", recid);

            // Use same styling as other pages
            PNotify.prototype.options.styling = "bootstrap3";

            var notice = new PNotify({
                title: 'Confirmation Needed',
                text: 'Are you sure to delete? It will not delete if this record is used in transactions.',
                icon: 'glyphicon glyphicon-question-sign',
                hide: false,
                confirm: {
                    confirm: true        // <-- critical for OK/Cancel
                },
                buttons: {
                    closer: false,
                    sticker: false
                },
                history: {
                    history: false
                }
            });

            notice.get()
                .on('pnotify.confirm', function () {
                    console.log("PNotify confirm clicked for Id =", recid);

                    $.ajax({
                        url: '@Url.Action("DeleteSEEIndices", "SEEIndices")',
                        type: 'POST',
                        data: { Id: recid },
                        success: function (data) {
                            if (data.success) {
                                showSuccessAlert("Deleted successfully.");
                                setTimeout(() => location.reload(), 2000);
                            } else {
                                showDangerAlert(data.message || "Delete failed.");
                            }
                        },
                        error: function () {
                            showDangerAlert('Error deleting data.');
                        }
                    });
                })
                .on('pnotify.cancel', function () {
                    console.log("PNotify cancel clicked for Id =", recid);
                    loadSEEIndicesGrid();
                });
        }

        
    </script>
}


@section HideSidebar { }
