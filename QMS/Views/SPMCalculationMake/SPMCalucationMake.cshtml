<style>

    .form-control {
        padding: 0 10px !important;
        border: 0;
        border-bottom: 1px solid #cccccc;
        border-radius: 0px;
    }

    label {
        margin-bottom: 0;
        margin-top: .3rem;
    }

    #scrollToTopBtn:hover {
        background-color: #0056b3; /* Darker blue */
    }

    #scrollToTopBtn {
        outline: none; /* Removes the focus border */
    }

    .tabulator .tabulator-header .tabulator-col {
        font-size: 14px;
        background-color: #D6E4F0;
        font-weight: 600;
        border-right: 1px solid #ccc;
    }

    .tabulator-row .tabulator-cell {
        padding: 5px 5px;
        font-size: 14px;
        height: 35px;
    }

    .tabulator-cell:hover {
        color: #4682B4 !important;
        cursor: pointer !important;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 0.5rem; /* Reduce space between each input group */
    }

    .calendar-container {
        cursor: pointer;
        padding: 8px 8px;
        width: 100%;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        transition: background-color 0.3s, box-shadow 0.3s;
        gap: 8px;
        border: 1px solid slategray;
    }

        .calendar-container:hover {
            background-color: #e3f2fd;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .calendar-container i.fa-calendar {
            color: #2196f3;
            font-size: 1.2em;
            padding-left: 20px;
        }

        .calendar-container span {
            color: #4682B4;
            margin: 0;
            font-size: 14px;
        }

    .container__predefined-ranges {
        font-size: 14px;
    }

    .month-item {
        font-size: 14px;
    }

    @@keyframes flash-bg {
        0% {
            background-color: #fff3cd;
        }
        /* light warning */
        100% {
            background-color: transparent;
        }
    }

    .row-flash {
        animation: flash-bg 2s ease-out forwards;
    }

    /* if your table has zebra or hover styles, ensure the flash wins */
    .tabulator-row.row-flash {
        transition: background-color 2s ease-out;
    }
</style>

<div class="content">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large;color: #4682B4;">SMP Calculation make</b>
            </div>
            <div class="col-md-3">
                <div id="customDateTriggerSPMMake" class="calendar-container">
                    <i class="fa fa-calendar"></i>
                    <span id="dateRangePaymentSPMMake">Select Date Range</span>
                </div>
            </div>
            <div>
                <button id="addPaymentButton" type="button" class="btn btn-outline-success legitRipple mr-2" style="width: 140px;font-size:15px" onclick="location.href='@Url.Action("SPMCalucationMakeDetails", "SPMCalculationMake")'">
                    
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>
                <button id="backButton" class="btn btn-outline-primary legitRipple mr-2" onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>


@section Scripts {
    <!-- Font Awesome (if not already in your layout) -->
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script> *@

    <!-- Litepicker CSS/JS (move CSS to head in layout for production if you like) -->
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>

    <script>

        let filterStartSPMMakeDate = moment().startOf('month').format('YYYY-MM-DD');
        let filterEndSPMMakeDate = moment().endOf('month').format('YYYY-MM-DD');

        $(document).ready(function () {

            $('#dateRangePaymentSPMMake').text(
                moment(filterStartSPMMakeDate).format('MMMM D, YYYY') + ' - ' + moment(filterEndSPMMakeDate).format('MMMM D, YYYY')
            );

            const picker = new Litepicker({
                element: document.getElementById('customDateTriggerSPMMake'),
                singleMode: false,
                format: 'DD-MM-YYYY',
                numberOfMonths: 2,
                numberOfColumns: 2,
                dropdowns: { minYear: 2020, maxYear: null, months: true, years: true },
                plugins: ['ranges'],
                setup: (picker) => {
                    picker.on('selected', (start, end) => {
                        filterStartSPMMakeDate = start.format('YYYY-MM-DD');
                        filterEndSPMMakeDate = end.format('YYYY-MM-DD');
                        $('#dateRangePaymentSPMMake').text(`${start.format('MMMM D, YYYY')} - ${end.format('MMMM D, YYYY')}`);
                    });

                    picker.on('clear', () => {
                        filterStartSPMMakeDate = "";
                        filterEndSPMMakeDate = "";
                        $('#dateRangePaymentSPMMake').text("Select Date Range");
                    });
                },
                ranges: {
                    Today: [moment(), moment()],
                    Yesterday: [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                },
                startDate: moment().startOf('month').format('DD-MM-YYYY'),
                endDate: moment().endOf('month').format('DD-MM-YYYY')
            });

            $('#customDateTriggerSPMMake').on('click', function () {
                picker.show();
            });

            document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('backButton').addEventListener('click', function () {
                    window.history.back();
                });
            });

        });
    </script>
}

