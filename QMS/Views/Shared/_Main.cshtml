    <div class="row p-3 d-flex justify-content-center" style="margin-top:-30px;">
        <div class="col-md-5 col-lg-4">
            <div class="tracker-palette" id="vendorOptionPalette">

                <!-- header -->
                <div class="palette-header">
                    <div>
                        @{
                            if (userRole == (int)UserRoles.Admin
                            || userRole == (int)UserRoles.Manager
                            || userRole == (int)UserRoles.Staff)
                            {
                                <h5><i class="fas fa-th-large"></i> Option Selection</h5>
                            }
                             if (userRole == (int)UserRoles.Vendor)
                            {
                                <h5><i class="fas fa-th-large"></i> Vendor Option Selection</h5>
                            }
                        }
                    </div>


                    <div>
                    </div>
                </div>

                <!-- search -->
                <div class="palette-search">
                    <div class="search-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="palette-search-input" placeholder="Search Selection..." data-target="vendorOption">
                        <button type="button" class="clear-btn" data-target="vendorOption"><i class="fas fa-times"></i></button>
                    </div>
                </div>

                <!-- content -->
                <div class="palette-content">
                    <!-- groups -->
                    <div class="groups-view" id="vendorOptionGroupsView">
                        <div class="section-label" id="vendorOptionLabel">ALL VENDOR SELECTION</div>
                        <div class="group-list" id="vendorOptionGroupList"></div>
                        <div class="no-results hidden" id="vendorOptionNoResults"><i class="far fa-frown"></i><p>No menu items</p></div>
                    </div>

                    <!-- items -->
                    <div class="items-view" id="vendorOptionItemsView">
                        <div class="back-header">
                            <button type="button" class="back-btn" onclick="showGroupsVendorOption()"><i class="fas fa-arrow-left"></i></button>
                            <span class="selected-group-icon" id="vendorOptionSelectedIcon"></span>
                            <div>
                                <div class="selected-group-name" id="vendorOptionSelectedName"></div>
                                <div class="selected-group-count" id="vendorOptionSelectedCount"></div>
                            </div>
                        </div>
                        <div id="vendorOptionItemsList"></div>
                    </div>
                </div>

                <!-- footer -->
                <div class="palette-footer">
                    <div>
                    </div>
                    <span id="vendorOptionGroupCount"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        @RenderBody()
    </div>

  
    @{
        var vendorOptionGroupsServer = new List<object>();

        if (userRole == (int)UserRoles.Admin || userRole == (int)UserRoles.Manager || userRole == (int)UserRoles.Staff)
        {
            vendorOptionGroupsServer.Add(new
            {
                id = "Wipro",
                name = "Wipro",
                icon = "🏢",
                iconClass = "gi-Wipro",
                items = new[] {
                new {
                name = "Open Wipro",
                inputUrl = Url.Action("WiproMenu", "Home"),
                outputUrl = Url.Action("Vendor", "Vendor")}}});

            vendorOptionGroupsServer.Add(new
            {
                id = "Vendor",
                name = "Vendor",
                icon = "🧑‍💼",
                iconClass = "gi-vendor",
                items = new[] {
                new {
                name = "Open Vendor",
                inputUrl = Url.Action("Vendor", "Vendor"),
                outputUrl = Url.Action("Vendor", "Vendor") }} });

            vendorOptionGroupsServer.Add(new
            {
                id = "Service",
                name = "Service",
                icon = "🛠️",
                iconClass = "gi-service",
                items = new[]
                { new {
                name = "Open Service",
                inputUrl = Url.Action("ServiceMenu", "Home"),
                outputUrl = Url.Action("ServiceMenu", "Home")}}});

            vendorOptionGroupsServer.Add(new
            {
                id = "NPI",
                name = "NPI",
                icon = "📋",
                iconClass = "gi-product",
                items = new object[] { } // empty => will open items view instead
            });

            vendorOptionGroupsServer.Add(new
            {
                id = "Supply Chain",
                name = "Supply Chain",
                icon = "🚚",
                iconClass = "gi-supplychain",
                items = new[] {
                new { name = "Supply Chain",
                inputUrl = Url.Action("SCMMenu", "Home"),
                outputUrl = Url.Action("SCMMenu", "Home")}}});
        }
        else if (userRole == (int)UserRoles.Vendor)
        {
            vendorOptionGroupsServer.Add(new
            {
                id = "Profile",
                name = "Profile",
                icon = "🧑‍💼",
                iconClass = "gi-vendor",
                items = new[] {
                new {  name = "Open Profile", inputUrl = Url.Action("VendorDetail", "Vendor", new { id = vendor_Id }),
                outputUrl = Url.Action("VendorDetail", "Vendor", new { id = vendor_Id })} }
            });

            vendorOptionGroupsServer.Add(new
            {
                id = "Supply Chain",
                name = "Supply Chain",
                icon = "🚚",
                iconClass = "gi-supplychain",
                items = new[] {
                new {
                name = "Open Supply Chain",
                inputUrl = Url.Action("Vendor", "OpenPo"),
    outputUrl = Url.Action("Vendor", "OpenPo") } }
            });

            vendorOptionGroupsServer.Add(new
            {
                id = "Reports",
                name = "Reports",
                icon = "📊",
                iconClass = "gi-product",
                items = new object[] { } 
            });

            vendorOptionGroupsServer.Add(new
            {
                id = "Notification",
                name = "Notification",
                icon = "🔔",
                iconClass = "gi-product",
                items = new object[] { } 
            });
        }
        else
        {
            // empty list for other roles
            vendorOptionGroupsServer = new List<object>();
        }
    }

    <script>
        // Server-populated groups (serialized JSON)
        const vendorOptionGroups = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(vendorOptionGroupsServer));
        const vendorOptionData = { vendorOption: vendorOptionGroups };

        document.addEventListener('DOMContentLoaded', function () {
            renderVendorOptionGroups('vendorOption', vendorOptionGroups);

            document.querySelectorAll('.palette-search-input').forEach(function (input) {
                input.addEventListener('input', function () {
                    const target = this.getAttribute('data-target');
                    filterVendorOptionGroups(target);
                });
            });

            document.querySelectorAll('.clear-btn').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const target = this.getAttribute('data-target');
                    clearVendorOptionSearch(target);
                });
            });
        });

        function renderVendorOptionGroups(groupId, groups) {
            const container = document.getElementById(groupId + 'GroupList');
            const noResults = document.getElementById(groupId + 'NoResults');
            const label = document.getElementById(groupId + 'Label');
            const countEl = document.getElementById(groupId + 'GroupCount');
            const searchInput = document.querySelector('.palette-search-input[data-target="' + groupId + '"]');
            const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';

            if (countEl) countEl.textContent = groups.length + ' Selection(s)';

            if (groups.length === 0) {
                if (container) container.innerHTML = '';
                if (noResults) noResults.classList.remove('hidden');
                if (label) label.style.display = 'none';
                return;
            }

            if (noResults) noResults.classList.add('hidden');
            if (label) {
                label.style.display = 'block';
                label.textContent = searchTerm ? 'Found ' + groups.length + ' item(s)' : 'ALL VENDOR SELECTION';
            }

            let html = '';
            groups.forEach(function (group) {
                const highlightedName = searchTerm
                    ? group.name.replace(new RegExp('(' + escapeRegex(searchTerm) + ')', 'gi'), '<span class="highlight">$1</span>')
                    : group.name;

                html += `
                                                <div class="group-item" onclick="openGroupDirect('vendorOption','${group.id}')">
                                                    <div class="group-icon ${group.iconClass}">${group.icon}</div>
                                                    <div class="group-info">
                                                        <div class="group-name">${highlightedName}</div>
                                                        <div class="group-count">${group.items.length} Selection(s)</div>
                                                    </div>
                                                    <i class="fas fa-chevron-right arrow-icon"></i>
                                                </div>
                                            `;
            });
            if (container) container.innerHTML = html;
        }

        function openGroupDirect(groupId, groupIdName) {
            const groups = vendorOptionData[groupId] || [];
            const group = groups.find(g => g.id === groupIdName);
            if (!group) return;

            if (group.items && group.items.length > 0 && group.items[0].inputUrl) {
                window.location.href = group.items[0].inputUrl;
            } else {
                showVendorOptionItems(groupId, groupIdName);
            }
        }

        function clearVendorOptionSearch(groupId) {
            const searchInput = document.querySelector('.palette-search-input[data-target="' + groupId + '"]');
            const clearBtn = document.querySelector('.clear-btn[data-target="' + groupId + '"]');
            if (!searchInput) return;
            searchInput.value = '';
            if (clearBtn) clearBtn.classList.remove('show');
            renderVendorOptionGroups(groupId, vendorOptionData[groupId]);
        }

        function filterVendorOptionGroups(groupId) {
            const searchInput = document.querySelector('.palette-search-input[data-target="' + groupId + '"]');
            const clearBtn = document.querySelector('.clear-btn[data-target="' + groupId + '"]');
            const searchTerm = searchInput.value.toLowerCase();

            if (searchTerm) {
                if (clearBtn) clearBtn.classList.add('show');
            } else {
                if (clearBtn) clearBtn.classList.remove('show');
            }

            const allGroups = vendorOptionData[groupId];
            const filtered = allGroups.filter(function (group) {
                return group.name.toLowerCase().includes(searchTerm);
            });

            renderVendorOptionGroups(groupId, filtered);

            // Ensure groups view is visible
            const gv = document.getElementById(groupId + 'GroupsView');
            const iv = document.getElementById(groupId + 'ItemsView');
            if (gv) gv.classList.remove('hidden');
            if (iv) iv.classList.remove('active');
        }

        function showVendorOptionItems(groupId, groupIdName) {
            const groups = vendorOptionData[groupId];
            const group = groups.find(g => g.id === groupIdName);
            if (!group) return;

            const iconEl = document.getElementById(groupId + 'SelectedIcon');
            const nameEl = document.getElementById(groupId + 'SelectedName');
            const countEl = document.getElementById(groupId + 'SelectedCount');

            if (iconEl) iconEl.textContent = group.icon;
            if (nameEl) nameEl.textContent = group.name;
            if (countEl) countEl.textContent = group.items.length + ' action(s)';

            let html = '';
            group.items.forEach(function (item) {
                html += `
                                                <div class="tracker-item">
                                                    <span class="tracker-name">${item.name}</span>
                                                    <div class="btn-group-tracker">
                                                        <button type="button" class="btn-input" onclick="window.location.href='${item.inputUrl}'">📥 Open</button>
                                                    </div>
                                                </div>
                                            `;
            });

            const itemsListEl = document.getElementById(groupId + 'ItemsList');
            if (itemsListEl) itemsListEl.innerHTML = html;
            const groupsViewEl = document.getElementById(groupId + 'GroupsView');
            const itemsViewEl = document.getElementById(groupId + 'ItemsView');
            if (groupsViewEl) groupsViewEl.classList.add('hidden');
            if (itemsViewEl) itemsViewEl.classList.add('active');
        }

        function showGroupsVendorOption() {
            const gv = document.getElementById('vendorOptionGroupsView');
            const iv = document.getElementById('vendorOptionItemsView');
            if (gv) gv.classList.remove('hidden');
            if (iv) iv.classList.remove('active');
        }

        function escapeRegex(string) {
            return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        }
    </script>
</body>
</html>
