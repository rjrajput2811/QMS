    <style>
        :root {
            --border: #e4e7eb;
            --hover-bg: #f8f9fa;
            --label-color: #222;
            --pill-radius: 8px;
            --transition: all 0.25s ease-in-out;
        }

        .card-body {
            background: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Segoe UI', Roboto, sans-serif;
            margin-top: -45px;
        }

        .card-section {
            border: 1px solid var(--border);
            border-radius: 18px;
            background: #fff;
            overflow: hidden;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
            width: 520px;
            max-width: 90%;
        }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 22px;
            background: #f9fafb;
            border-bottom: 1px solid var(--border);
            font-weight: 600;
            font-size: 18px;
            color: #111;
        }

        .list-group {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .list-group-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 24px;
            border-bottom: 1px dashed var(--border);
            color: var(--label-color);
            font-size: 18px;
            cursor: pointer;
            transition: var(--transition);
        }

            .list-group-item:last-child {
                border-bottom: none;
            }

            .list-group-item:hover {
                background: var(--hover-bg);
                transform: scale(1.01);
                color: orange;
            }

        .label {
            display: flex;
            align-items: center;
            gap: 7px;
        }

        .badge-pill {
            font-size: 13px;
            padding: 5px 10px;
            border-radius: var(--pill-radius);
            font-weight: 600;
            letter-spacing: .3px;
            min-width: 70px;
            text-align: center;
            margin-left: auto;
        }

        .badge-blue {
            background: #007bff;
            color: #fff;
        }

        .badge-gray {
            background: #6c757d;
            color: #fff;
        }

        .badge-green {
            background: #198754;
            color: #fff;
        }

        .badge-cyan {
            background: #0dcaf0;
            color: #fff;
        }

        .badge-light {
            background: #e9ecef;
            color: #333;
        }

        .icon-right {
            color: #aaa;
            font-size: 16px;
            margin-left: 10px;
        }
    </style>
</head>
