    <div class="row p-3 d-flex justify-content-center" style="margin-top:-113px;">
        <div class="col-md-5 col-lg-4">
            <div class="tracker-palette" id="servicePalette">

                <!-- header -->
                <div class="palette-header">
                    <div>
                        <h5><i class="fas fa-th-large"></i> Service Selection</h5>
                    </div>
                    <div></div>
                </div>

                <!-- search -->
                <div class="palette-search">
                    <div class="search-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="palette-search-input" placeholder="Search service..." data-target="service">
                        <button type="button" class="clear-btn" data-target="service"><i class="fas fa-times"></i></button>
                    </div>
                </div>

                <!-- content -->
                <div class="palette-content">
                    <!-- groups -->
                    <div class="groups-view" id="serviceGroupsView">
                        <div class="section-label" id="serviceLabel">ALL SERVICE</div>
                        <div class="group-list" id="serviceGroupList"></div>
                        <div class="no-results hidden" id="serviceNoResults"><i class="far fa-frown"></i><p>No service items</p></div>
                    </div>

                    <!-- items -->
                    <div class="items-view" id="serviceItemsView">
                        <div class="back-header">
                            <button type="button" class="back-btn" onclick="showGroupsService()"><i class="fas fa-arrow-left"></i></button>
                            <span class="selected-group-icon" id="serviceSelectedIcon"></span>
                            <div>
                                <div class="selected-group-name" id="serviceSelectedName"></div>
