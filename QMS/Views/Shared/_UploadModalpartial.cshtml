<script src="~/js/exceljs.min.js"></script>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadModalLabel">Upload Data</h5>
                <button id="modalClose" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="file" id="fileInput" accept=".xls,.xlsx" />
            </div>
            @* <div class="modal-body">
                <p>File Name: <span id="fileNameDisplay"></span></p>
                <p>Upload Date: <span id="uploadDateDisplay"></span></p>
                <p>Number of Records: <span id="recordCountDisplay"></span></p>
            </div> *@
            <div class="modal-footer">
                <button id="close-button" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="upload-button" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#close-button').on('click', function () {
        $('#uploadModal').modal('hide');
    });

    $('#modalClose').on('click', function () {
        $('#uploadModal').modal('hide');
    });

    function AutoReload() {
        setTimeout(function () { window.location.reload(); }, 1500);
    }
</script>