@{
    ViewData["Title"] = "Third Party Certification";
}

<link href="~/css/fontawesome/styles.min.css" rel="stylesheet" />
<link href="~/css/tabulator/tabulator.min.css" rel="stylesheet" />
<link href="~/css/tabulator/tabulator_bootstrap4.min.css" rel="stylesheet" />
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.datatables.js"></script>
<link href="~/css/pnotify.css" rel="stylesheet" />
<script src="~/js/pnotify.js"></script>
<script src="~/js/pnotify.confirm.js"></script>
<script src="~/lib/bootstrap/dist/js/datatables.buttons.min.js"></script>
<script src="~/lib/bootstrap/dist/js/popupAlert.js"></script>
<script src="~/lib/bootstrap/dist/js/jszip.min.js"></script>
<script src="~/lib/bootstrap/dist/js/buttons.html5.min.js"></script>
<script src="~/js/common.js"></script>
<script src="~/js/tabulator.js"></script>
<script src="~/js/xlsx.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<style>
    .form-control {
        padding: 0 10px !important;
        border: 0;
        border-bottom: 1px solid #cccccc;
        border-radius: 0px;
    }

    label {
        margin-bottom: 0;
        margin-top: .3rem;
    }

    .tabulator .tabulator-header .tabulator-col {
        font-size: 14px;
        background-color: #D6E4F0;
        font-weight: 600;
        border-right: 1px solid #ccc;
    }
   

    .tabulator-cell:hover {
        color: #4682B4 !important;
        cursor: pointer !important;
        font-weight: bold;
    }
    .tabulator-row .tabulator-cell {
        padding: 5px 5px;
        font-size: 14px;
        height: 30px;
    }

    .form-group {
        margin-bottom: 0.5rem;
    }

    #scrollToTopBtn:hover {
        background-color: #0056b3;
    }

    #scrollToTopBtn {
        outline: none;
    }
</style>

<div class="content">
    <!-- Header Card -->
    <div class="card my-2">
        <div class="card-body p-2 d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large; color: #4682B4;">Third Party Test Reports</b>
            </div>
            <div>
                <button id="addButton" type="button" class="btn btn-outline-success legitRipple mr-2" onclick="ShowDetail()">
                    <i class="fas fa-plus mr-2 fa-1x"></i>Add
                </button>
                <button id="backButton" class="btn btn-outline-primary btn-sm" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>


    <!-- Certificate Entry Row -->
    <div class="row">
        <div class="col-12">
            <div class="card" style="margin-bottom: 0.25rem">
                <div class="card-body">
                    <div class="chart-container">
                        <div class="card-body" style="margin-top: -30px; margin-bottom: -15px;">
                            <div class="row form-group align-items-center" id="divCert">
                                <div class="col-1">
                                    <label for="CertNameInput" id="CertNameLbl" style="white-space: nowrap;"><b>Name</b></label>
                                </div>
                                <div class="col-8">
                                    <input type="text" id="CertIDInput" class="form-control" hidden />

                                    <input type="text" id="CertNameInput" class="form-control" placeholder="Enter Certification Name" style="max-width: 300px;" required />
                                </div>
                                <div class="col-3 d-flex justify-content-end">
                                    <button id="SaveButton" type="button" class="btn btn-outline-success mr-2" onclick="InsertUpdateCert()">
                                        <i class="fas fa-floppy-disk mr-1"></i>Save
                                    </button>
                                    <button id="BbackButton" type="button" class="btn btn-warning">
                                        <i class="fas fa-arrow-left mr-1"></i>Back
                                    </button>
                                </div>

                            </div>
                        </div>
                        <div id="certTable" class="mt-3"></div>
                    </div>
                </div>
            </div>
            @*     <div class="card">
                <div class="card-body">
            <div id="certTable" class="mt-3"></div>
                </div>
            </div> *@
        </div>
    </div>

</div>

<!-- JS for Certification Page -->
@section Scripts {
    <script src="~/scripts/certificationmaster/Thirdcert.js" asp-append-version="true"></script>
}
