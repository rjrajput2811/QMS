</div>

@section Scripts {

    <script src="~/js/tabulator.js"></script>
    <script src="~/js/tabulator.min.js"></script>

    <!-- Moment.js and Litepicker -->
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="~/js/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/exceljs@4.4.0/dist/exceljs.min.js"></script>

    <script>
        let filterStartBISDate = moment().startOf('month').format('YYYY-MM-DD');
        let filterEndBISDate = moment().endOf('month').format('YYYY-MM-DD');

        $(document).ready(function () {
            $('#dateRangeBIS').text(
                moment(filterStartBISDate).format('MMMM D, YYYY') + ' - ' + moment(filterEndBISDate).format('MMMM D, YYYY')
            );

            const picker = new Litepicker({
                element: document.getElementById('customDateTriggerBIS'),
                singleMode: false,
                format: 'DD-MM-YYYY',
                numberOfMonths: 2,
                numberOfColumns: 2,
                dropdowns: { minYear: 2020, maxYear: null, months: true, years: true },
                plugins: ['ranges'],
                setup: (picker) => {
                    picker.on('selected', (start, end) => {
                        const startMoment = moment(start.getTime());
                        const endMoment = moment(end.getTime());

                        filterStartBISDate = startMoment.format('YYYY-MM-DD');
                        filterEndBISDate = endMoment.format('YYYY-MM-DD');

                        $('#dateRangeBIS').text(`${startMoment.format('MMMM D, YYYY')} - ${endMoment.format('MMMM D, YYYY')}`);
                        loadData();
                    });

                    picker.on('clear', () => {
                        filterStartBISDate = "";
                        filterEndBISDate = "";
                        $('#dateRangeBIS').text("Select Date Range");
                        loadData();
                    });
                },
                ranges: {
                    Today: [moment(), moment()],
                    Yesterday: [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                },
                startDate: moment().startOf('month').format('DD-MM-YYYY'),
                endDate: moment().endOf('month').format('DD-MM-YYYY')
            });

            $('#customDateTriggerBIS').on('click', function () {
                picker.show();
            });

            // Initial grid load
            loadData();
        });

        function loadData() {
            Blockloadershow();
            $.ajax({
                url: '/BisProjectTrac/GetBisProjectTracker',
                type: 'GET',
                dataType: 'json',
                data: {
                    startDate: filterStartBISDate,
                    endDate: filterEndBISDate
                },
                success: function (data) {
                    Blockloaderhide();
                    if (data && Array.isArray(data)) {
                        loadBISProjectTrackerGrid(data);
                    }
                    else {
                        showDangerAlert('No data available to load.');
                    }
                },
                error: function (xhr, status, error) {
                    showDangerAlert('Error retrieving data: ' + error);
                    Blockloaderhide();
                }
            });
        }

        var headerMenu = function () {
            var menu = [];
            var columns = this.getColumns();

            for (let column of columns) {
                let icon = document.createElement("i");
                icon.classList.add("fas");
                icon.classList.add(column.isVisible() ? "fa-check-square" : "fa-square");

                let label = document.createElement("span");
                let title = document.createElement("span");
                title.textContent = " " + column.getDefinition().title;

                label.appendChild(icon);
                label.appendChild(title);

                menu.push({
                    label: label,
                    action: function (e) {
                        e.stopPropagation();
                        column.toggle();
                        if (column.isVisible()) {
                            icon.classList.remove("fa-square");
                            icon.classList.add("fa-check-square");
                        } else {
                            icon.classList.remove("fa-check-square");
                            icon.classList.add("fa-square");
                        }
                    }
                });
            }

            return menu;
        };

        function loadBISProjectTrackerGrid(response) {
            Blockloadershow();

            let tabledata = []; // put your response data here later
            let columns = [];

                if (response.length > 0) {
            $.each(response, function (index, item) {

                function formatDate(value) {
                    return value ? new Date(value).toLocaleDateString("en-GB") : "";
                }


                tabledata.push({
                    Sr_No: index + 1,
                    Id: item.id,
                    Financial_Year: item.financial_Year,
                    Mon_PC: item.mon_Pc,
                    Nat_Project: item.nat_Project,
                    Lea_Model_No: item.lea_Model_No,
                    Section: item.section,
                    Manuf_Location: item.manuf_Location,
                    Lab: item.lab,
                    Start_Date: formatDate(item.start_Date),
                    Submitted_Date: formatDate(item.submitted_Date),
                    Current_Status: item.current_Status
                });
            });
        }

            columns.push(
                {
                    title: "Sr No",
                    field: "Sr_No",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Financial Year",
                    field: "Financial_Year",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Month/PC",
                    field: "Mon_PC",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Nature of Project",
                    field: "Nat_Project",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Lead Model Number",
                    field: "Lea_Model_No",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Section",
                    field: "Section",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Manufacturing Location",
                    field: "Manuf_Location",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Lab",
                    field: "Lab",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Test Start Date",
                    field: "Start_Date",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "BIS Submitted Date",
                    field: "Submitted_Date",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Current Status",
                    field: "Current_Status",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                }
            );

            let table = new Tabulator("#bisProjectTracker_Table", {
                data: [],
                layout: "fitDataTable",
                movableColumns: true,
                pagination: "local",
                paginationSize: 10,
                paginationSizeSelector: [10, 50, 100, 500],
                paginationCounter: "rows",
                placeholder: "<div style='text-align: center; font-size: 1rem; color: gray;'>No data available</div>",
                columns: columns
            });

            Blockloaderhide();
        }
    </script>
}

