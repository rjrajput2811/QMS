            color: #4682B4;
            margin: 0;
            font-size: 14px;
        }

    @@keyframes flash-bg {
        0% {
            background-color: #fff3cd;
        }

        100% {
            background-color: transparent;
        }
    }

    .row-flash {
        animation: flash-bg 2s ease-out forwards;
    }

    .tabulator-row.row-flash {
        transition: background-color 2s ease-out;
    }

