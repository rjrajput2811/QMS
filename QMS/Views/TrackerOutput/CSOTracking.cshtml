</div>

@section Scripts {

    <script src="~/js/tabulator.js"></script>
    <script src="~/js/tabulator.min.js"></script>

    <!-- Moment.js and Litepicker -->
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="~/js/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/exceljs@4.4.0/dist/exceljs.min.js"></script>

    <script>
        let filterStartDate = moment().startOf('month').format('YYYY-MM-DD');
        let filterEndDate = moment().endOf('month').format('YYYY-MM-DD');

        $(document).ready(function () {
            $('#dateRangeCSO').text(
                moment(filterStartDate).format('MMMM D, YYYY') + ' - ' + moment(filterEndDate).format('MMMM D, YYYY')
            );

            const picker = new Litepicker({
                element: document.getElementById('customDateTriggerCSO'),
                singleMode: false,
                format: 'DD-MM-YYYY',
                numberOfMonths: 2,
                numberOfColumns: 2,
                dropdowns: { minYear: 2020, maxYear: null, months: true, years: true },
                plugins: ['ranges'],
                setup: (picker) => {
                    picker.on('selected', (start, end) => {
                        // Litepicker gives Date objects -> wrap in moment
                        const startMoment = moment(start.getTime());
                        const endMoment = moment(end.getTime());

                        filterStartDate = startMoment.format('YYYY-MM-DD');
                        filterEndDate = endMoment.format('YYYY-MM-DD');

                        $('#dateRangeCSO').text(`${startMoment.format('MMMM D, YYYY')} - ${endMoment.format('MMMM D, YYYY')}`);
                        loadData();
                    });

                    picker.on('clear', () => {
                        filterStartDate = "";
                        filterEndDate = "";
                        $('#dateRangeCSO').text("Select Date Range");
                        loadData();
                    });
                },
                ranges: {
                    Today: [moment(), moment()],
                    Yesterday: [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                },
                startDate: moment().startOf('month').format('DD-MM-YYYY'),
                endDate: moment().endOf('month').format('DD-MM-YYYY')
            });

            $('#customDateTriggerCSO').on('click', function () {
                picker.show();
            });

            loadData();
        });

        function loadData() {
            Blockloadershow();
            $.ajax({
                url: '/CAReport/GetCSOTracking',
                type: 'GET',
                dataType: 'json',
                data: {
                    startDate: filterStartDate,
                    endDate: filterEndDate
                },
                success: function (data) {
                    Blockloaderhide();
                    if (data && Array.isArray(data)) {
                        OnTabGridLoad(data);
                    }
                    else {
                        showDangerAlert('No data available to load.');
                    }
                },
                error: function (xhr, status, error) {
                    showDangerAlert('Error retrieving data: ' + error);
                    Blockloaderhide();
                }
            });
        }

        var headerMenu = function () {
            var menu = [];
            var columns = this.getColumns();

            for (let column of columns) {
                let icon = document.createElement("i");
                icon.classList.add("fas");
                icon.classList.add(column.isVisible() ? "fa-check-square" : "fa-square");

                let label = document.createElement("span");
                let title = document.createElement("span");
                title.textContent = " " + column.getDefinition().title;

                label.appendChild(icon);
                label.appendChild(title);

                menu.push({
                    label: label,
                    action: function (e) {
                        e.stopPropagation();
                        column.toggle();
                        if (column.isVisible()) {
                            icon.classList.remove("fa-square");
                            icon.classList.add("fa-check-square");
                        } else {
                            icon.classList.remove("fa-check-square");
                            icon.classList.add("fa-square");
                        }
                    }
                });
            }

            return menu;
        };

        function OnTabGridLoad(response) {
            Blockloadershow();

            tabledata = [];
            let columns = [];

            if (response.length > 0) {
                $.each(response, function (index, item) {

                    let formattedDate = "";
                    let updatedDate = "";
                    let reportDate = "";
                    let date = "";
                    if (item.createdDate) {
                        const dateObj = new Date(item.createdDate);
                        formattedDate = dateObj.toLocaleDateString("en-GB");
                    }
                    if (item.updatedDate) {
                        const updatedateObj = new Date(item.updatedDate);
                        updatedDate = updatedateObj.toLocaleDateString("en-GB");
                    }
                    if (item.report_Date) {
                        const reportDateObj = new Date(item.report_Date);
                        reportDate = reportDateObj.toLocaleDateString("en-GB");
                    }
                    if (item.date) {
                        const dateObj = new Date(item.date);
                        date = dateObj.toLocaleDateString("en-GB");
                    }

                    tabledata.push({
                        Sr_No: index + 1,
                        Id: item.id,
                        Complaint_No: item.complaint_No,
                        Report_Date: reportDate,
                        Cust_Name_Location: item.cust_Name_Location,
                        Source_Complaint :item.source_Complaint,
                        Prod_Code_Desc: item.prod_Code_Desc,
                        Desc_Complaint: item.desc_Complaint,
                        Batch_Code: item.batch_Code,
                        Pkd: item.pkd,
                        Supp_Qty: item.supp_Qty,
                        Failure_Qty: item.failure_Qty,
                        Problem_State: item.problem_State,
                        Interim_Corrective: item.interim_Corrective,
                        Interim_Day :item.interim_Day,
                        Root_Cause_Anal: item.root_Cause_Anal,
                        Root_Cause_Day :item.root_Cause_Day,
                        Corrective_Action: item.corrective_Action,
                        Corrective_Action_Day :item.corrective_Action_Day,
                        Date: date,
                        Closure_Day : item.closure_Day,
                        ProblemBasket: item.issue_Problems,
                        CreatedDate: formattedDate,
                        CreatedBy: item.createdBy,
                        UpdatedBy: item.updatedBy,
                        UpdatedDate: updatedDate
                    });
                });
            }
            columns.push(
                {
                    title: "Sr No",
                    field: "Sr_No",
                    width: 50,
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },

                {
                    title: "Complaint No.",
                    field: "Complaint_No",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Reported Date",
                    field: "Report_Date",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Complaint Type",
                    field: "ComplaintType",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Customer Name & Location",
                    field: "Cust_Name_Location",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Source of Complaint",
                    field: "Source_Complaint",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Product Code & Description",
                    field: "Prod_Code_Desc",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Description of Complaint",
                    field: "Desc_ComplaintDesc_Complaint",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Batch code",
                    field: "Batch_Code",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "PKD code",
                    field: "Pkd",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Supplied Qty",
                    field: "Supp_Qty",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Failed Qty",
                    field: "Failure_Qty",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Problem Statement",
                    field: "Problem_State",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Problem Basket",
                    field: "ProblemBasket",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Interim Corrective action",
                    field: "Interim_Corrective",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Total Time Taken to Interim Corrective action",
                    field: "Interim_Day",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Root Cause Analysis",
                    field: "Root_Cause_Anal",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Total Time Taken to RCA",
                    field: "Root_Cause_Day",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Corrective Action",
                    field: "Corrective_Action",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                },
                {
                    title: "Total Time Taken to Corrective Action",
                    field: "Corrective_Action_Day",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Complaint Closure Date",
                    field: "Date",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Total Time Taken to Closure of Complaint",
                    field: "Closure_Day",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Attachments (CAPA report)",
                    field: "CapaReportAttachments",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "left",
                    headerMenu: headerMenu
                }
            );

            table = new Tabulator("#cso_Table", {
                data: tabledata,
                layout: "fitDataTable",
                movableColumns: true,
                pagination: "local",
                paginationSize: 10,
                paginationSizeSelector: [10, 50, 100, 500],
                paginationCounter: "rows",
                placeholder: "<div style='text-align: center; font-size: 1rem; color: gray;'>No data available</div>",
                columns: columns
            });

            Blockloaderhide();
        }

    </script>

}

@section HideSidebar { }
