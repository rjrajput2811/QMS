    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large;color: #4682B4;">CSO Tracking</b>
            </div>
            <div class="col-md-3">
                <div id="customDateTriggerCSO" class="calendar-container">
                    <i class="fa fa-calendar"></i>
                    <span id="dateRangeCSO">Select Date Range</span>
                </div>
            </div>
            <div>
                <button id="exportPayButton" type="button" class="btn btn-outline-danger legitRipple mr-2" style="width: 140px;font-size:15px">
                    <i class="fas fa-file-excel mr-2 fa-1x"></i>Export XL
                </button>
                <button id="backButton" class="btn btn-outline-primary legitRipple mr-2" onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="chart-container">
                        <div class="form-group row">
                            <div id="cso_Table" class="col-12"></div>
