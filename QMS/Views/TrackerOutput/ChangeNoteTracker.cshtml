<style>
    .form-control {
        padding: 0 10px !important;
        border: 0;
        border-bottom: 1px solid #cccccc;
        border-radius: 0px;
    }

    label {
        margin-bottom: 0;
        margin-top: .3rem;
    }

    #scrollToTopBtn:hover {
        background-color: #0056b3;
    }

    #scrollToTopBtn {
        outline: none;
    }

    .card .card-body .page-title {
        color: #4682B4;
        font-weight: 700;
    }

    .tabulator .tabulator-header .tabulator-col {
        font-size: 14px;
        background-color: #D6E4F0;
        font-weight: 600;
        border-right: 1px solid #ccc;
    }

    .tabulator-row .tabulator-cell {
        padding: 8px 8px;
        font-size: 14px;
        min-height: 36px;
        line-height: 18px;
    }

    .tabulator-cell:hover {
        color: #4682B4 !important;
        cursor: pointer !important;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 0.5rem;
    }

    .calendar-container {
        cursor: pointer;
        padding: 8px 8px;
        width: 100%;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        transition: background-color 0.3s, box-shadow 0.3s;
        gap: 8px;
        border: 1px solid slategray;
    }

        .calendar-container:hover {
            background-color: #e3f2fd;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

        .calendar-container i.fa-calendar {
            color: #2196f3;
            font-size: 1.2em;
            padding-left: 6px;
        }

        .calendar-container span {
            color: #4682B4;
            margin: 0;
            font-size: 14px;
        }

    @@keyframes flash-bg {
        0% {
            background-color: #fff3cd;
        }

        100% {
            background-color: transparent;
        }
    }

    .row-flash {
        animation: flash-bg 2s ease-out forwards;
    }

    .tabulator-row.row-flash {
        transition: background-color 2s ease-out;
    }
</style>

<div class="content">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <b style="font-size: large;color: #4682B4;">Change Note Tracker</b>
            </div>

            <div class="col-md-3">
                <div id="customDateTriggerCNT" class="calendar-container">
                    <i class="fa fa-calendar"></i>
                    <span id="dateRangeCNT">Select Date Range</span>
                </div>
            </div>

            <div class="d-flex">
                <button id="exportCNTButton" type="button"
                        class="btn btn-outline-danger legitRipple mr-2"
                        style="width: 140px;font-size:15px">
                    <i class="fas fa-file-excel mr-2 fa-1x"></i>Export XL
                </button>

                <button id="backButton" class="btn btn-outline-primary legitRipple mr-2"
                        onclick="location.href='@Url.Action("TrackerMenu", "Home")'">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="chart-container">
                        <div class="form-group row">
                            <div id="cnt_Table" class="col-12"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tabulator.js"></script>
    <script src="~/js/tabulator.min.js"></script>

    <!-- Moment.js and Litepicker -->
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="~/js/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>

    <script>
        let filterStartCNTDate = moment().startOf('month').format('YYYY-MM-DD');
        let filterEndCNTDate = moment().endOf('month').format('YYYY-MM-DD');

        $(document).ready(function () {

            $('#dateRangeCNT').text(
                moment(filterStartCNTDate).format('MMMM D, YYYY') + ' - ' + moment(filterEndCNTDate).format('MMMM D, YYYY')
            );

            const picker = new Litepicker({
                element: document.getElementById('customDateTriggerCNT'),
                singleMode: false,
                format: 'DD-MM-YYYY',
                numberOfMonths: 2,
                numberOfColumns: 2,
                dropdowns: { minYear: 2020, maxYear: null, months: true, years: true },
                plugins: ['ranges'],
                setup: (picker) => {
                    picker.on('selected', (start, end) => {
                        const startMoment = moment(start.getTime());
                        const endMoment = moment(end.getTime());

                        filterStartCNTDate = startMoment.format('YYYY-MM-DD');
                        filterEndCNTDate = endMoment.format('YYYY-MM-DD');

                        $('#dateRangeCNT').text(
                            `${startMoment.format('MMMM D, YYYY')} - ${endMoment.format('MMMM D, YYYY')}`
                        );

                        // hook your API here if you want later (e.g. reload data)
                        // loadCNTData();
                    });

                    picker.on('clear', () => {
                        filterStartCNTDate = "";
                        filterEndCNTDate = "";
                        $('#dateRangeCNT').text("Select Date Range");
                        // hook your API here if you want later
                        // loadCNTData();
                    });
                },
                ranges: {
                    Today: [moment(), moment()],
                    Yesterday: [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                },
                startDate: moment().startOf('month').format('DD-MM-YYYY'),
                endDate: moment().endOf('month').format('DD-MM-YYYY')
            });

            $('#customDateTriggerCNT').on('click', function () {
                picker.show();
            });

            // Initial grid load (empty, same as CA report pattern)
            loadCNTGrid(null);
        });

        // Common header menu for column show/hide
        var headerMenu = function () {
            var menu = [];
            var columns = this.getColumns();

            for (let column of columns) {
                let icon = document.createElement("i");
                icon.classList.add("fas");
                icon.classList.add(column.isVisible() ? "fa-check-square" : "fa-square");

                let label = document.createElement("span");
                let title = document.createElement("span");
                title.textContent = " " + column.getDefinition().title;

                label.appendChild(icon);
                label.appendChild(title);

                menu.push({
                    label: label,
                    action: function (e) {
                        e.stopPropagation();
                        column.toggle();
                        if (column.isVisible()) {
                            icon.classList.remove("fa-square");
                            icon.classList.add("fa-check-square");
                        } else {
                            icon.classList.remove("fa-check-square");
                            icon.classList.add("fa-square");
                        }
                    }
                });
            }

            return menu;
        };

        function loadCNTGrid(response) {
            Blockloadershow();

            let tabledata = []; // keep empty for now, like CA report

            let columns = [
                {
                    title: "S.No",
                    field: "SrNo",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Financial Year",
                    field: "FinancialYear",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Month",
                    field: "Month",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Date",
                    field: "ChangeDate", // or "Date" if your API uses that
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Document Number",
                    field: "DocumentNumber",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Category",
                    field: "Category",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Vendor",
                    field: "Vendor",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Change From",
                    field: "ChangeFrom",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Change To",
                    field: "ChangeTo",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Attachment",
                    field: "Attachment",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerFilter: "input",
                    headerMenu: headerMenu
                }
            ];

            let table = new Tabulator("#cnt_Table", {
                data: tabledata,
                layout: "fitColumns",
                movableColumns: true,
                pagination: "local",
                paginationSize: 10,
                paginationSizeSelector: [10, 50, 100, 500],
                paginationCounter: "rows",
                placeholder: "<div style='text-align: center; font-size: 1rem; color: gray;'>No data available</div>",
                columns: columns
            });

            Blockloaderhide();
        }
    </script>
}

