    <!-- Moment.js and Litepicker -->
    <script src="https://cdn.jsdelivr.net/npm/moment/min/moment.min.js"></script>
    <script src="~/js/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/plugins/ranges.js"></script>

    <script>
        let filterStartRCADate = moment().startOf('month').format('YYYY-MM-DD');
        let filterEndRCADate = moment().endOf('month').format('YYYY-MM-DD');

        $(document).ready(function () {
            $('#dateRangeRCA').text(
                moment(filterStartRCADate).format('MMMM D, YYYY') + ' - ' + moment(filterEndRCADate).format('MMMM D, YYYY')
            );

            const picker = new Litepicker({
                element: document.getElementById('customDateTriggerRCA'),
                singleMode: false,
                format: 'DD-MM-YYYY',
                numberOfMonths: 2,
                numberOfColumns: 2,
                dropdowns: { minYear: 2020, maxYear: null, months: true, years: true },
                plugins: ['ranges'],
                setup: (picker) => {
                    picker.on('selected', (start, end) => {
                        const startMoment = moment(start.getTime());
                        const endMoment = moment(end.getTime());

                        filterStartRCADate = startMoment.format('YYYY-MM-DD');
                        filterEndRCADate = endMoment.format('YYYY-MM-DD');

                        $('#dateRangeRCA').text(
                            `${startMoment.format('MMMM D, YYYY')} - ${endMoment.format('MMMM D, YYYY')}`
                        );

                        loadData();

                        // TODO: Call your API with these dates, then pass response to loadCustomerRCAGrid(response)
                        // example: $.get('/CustomerRCA/GetTracker', { fromDate: filterStartRCADate, toDate: filterEndRCADate }, loadCustomerRCAGrid);
                    });

                    picker.on('clear', () => {
                        filterStartRCADate = "";
                        filterEndRCADate = "";
                        $('#dateRangeRCA').text("Select Date Range");
                        loadData();
                        // TODO: reload grid without date filters if needed
                    });
                },
                ranges: {
                    Today: [moment(), moment()],
                    Yesterday: [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                },
                startDate: moment().startOf('month').format('DD-MM-YYYY'),
                endDate: moment().endOf('month').format('DD-MM-YYYY')
            });

            $('#customDateTriggerRCA').on('click', function () {
                picker.show();
            });

            // Initial empty grid
            loadData();
        });

         function loadData() {
            Blockloadershow();
            $.ajax({
                url: '/CustomerRCAReport/GetRCATracking',
                type: 'GET',
                dataType: 'json',
                data: {
                    startDate: filterStartRCADate,
                    endDate: filterEndRCADate
                },
                success: function (data) {
                    Blockloaderhide();
                    if (data && Array.isArray(data)) {
                        loadCustomerRCAGrid(data);
                    }
                    else {
                        showDangerAlert('No data available to load.');
                    }
                },
                error: function (xhr, status, error) {
                    showDangerAlert('Error retrieving data: ' + error);
                    Blockloaderhide();
                }
            });
        }

        // Common header menu for column show/hide
        var headerMenu = function () {
            var menu = [];
            var columns = this.getColumns();

            for (let column of columns) {
                let icon = document.createElement("i");
                icon.classList.add("fas");
                icon.classList.add(column.isVisible() ? "fa-check-square" : "fa-square");

                let label = document.createElement("span");
                let title = document.createElement("span");
                title.textContent = " " + column.getDefinition().title;

                label.appendChild(icon);
                label.appendChild(title);

                menu.push({
                    label: label,
                    action: function (e) {
                        e.stopPropagation();
                        column.toggle();
                        if (column.isVisible()) {
                            icon.classList.remove("fa-square");
                            icon.classList.add("fa-check-square");
                        } else {
                            icon.classList.remove("fa-check-square");
                            icon.classList.add("fa-square");
                        }
                    }
                });
            }

            return menu;
        };

        function decodeHtmlOnce(str) {
            const t = document.createElement("textarea");
            t.innerHTML = str == null ? "" : String(str);
            return t.value;
        }

        // decode multiple times (handles &amp;lt; -> &lt; -> <)
        function decodeDeep(str, max = 3) {
            let s = str == null ? "" : String(str);
            for (let i = 0; i < max; i++) {
                const d = decodeHtmlOnce(s);
                if (d === s) break;
                s = d;
            }
            return s;
        }

        // OPTIONAL fallback sanitizer (recommended: DOMPurify)
        function basicSanitizeHtml(html) {
            let h = String(html || "");

            // remove script/style blocks
            h = h.replace(/<\s*script[^>]*>[\s\S]*?<\s*\/\s*script\s*>/gi, "");
            h = h.replace(/<\s*style[^>]*>[\s\S]*?<\s*\/\s*style\s*>/gi, "");

            // remove on* handlers
            h = h.replace(/\son\w+\s*=\s*(".*?"|'.*?'|[^\s>]+)/gi, "");

            // block javascript: urls
            h = h.replace(/(href|src)\s*=\s*(['"])\s*javascript:[\s\S]*?\2/gi, '$1="#"');

            return h;
        }

        // Convert DB value => safe display HTML for Tabulator
        function toDisplayHtml(value) {
            // 1) decode multi-encoded strings
            let h = decodeDeep(value, 3);

            // 2) normalize non-breaking spaces
            h = h.replace(/&nbsp;/g, " ");

            // 3) If it looks like plain text, escape and convert newlines to <br>
            const looksLikeHtml = /<[^>]+>/.test(h);
            if (!looksLikeHtml) {
                h = h
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/\r\n|\r|\n/g, "<br>");
            }

            // 4) normalize <br>
            h = h.replace(/<br\s*\/?>/gi, "<br>");

            // 5) sanitize
            if (window.DOMPurify) {
                h = DOMPurify.sanitize(h, { USE_PROFILES: { html: true } });
            } else {
                h = basicSanitizeHtml(h);
            }

            // 6) trim ending <br>
            h = h.replace(/(<br>\s*)+$/i, "");

            return h.trim();
        }

        // For filtering: HTML -> plain text
        function htmlToText(html) {
            const div = document.createElement("div");
            div.innerHTML = String(html || "");
            return (div.textContent || div.innerText || "").trim();
        }

        // Reusable header filter for HTML cells
        function htmlHeaderFilterFunc(headerValue, rowValue) {
            const hv = String(headerValue || "").toLowerCase().trim();
            if (!hv) return true;
            const text = htmlToText(rowValue).toLowerCase();
            return text.includes(hv);
        }

        // Optional: cell style for multi-line display
        function multiLineCellFormatter(cell) {
            const v = cell.getValue();
            return v || "";
        }

        function loadCustomerRCAGrid(response) {
            Blockloadershow();

            // Use API response when you wire it up; for now keep it empty
            tabledata = [];
            let columns = [];

            if (response && response.length > 0) {
                $.each(response, function (index, item) {

                    let formattedDate = "";
                    let updatedDate = "";
                    let reportDate = "";
                    let date = "";

                    if (item.createdDate) {
                        const dateObj = new Date(item.createdDate);
                        formattedDate = dateObj.toLocaleDateString("en-GB");
                    }
                    if (item.updatedDate) {
                        const updatedateObj = new Date(item.updatedDate);
                        updatedDate = updatedateObj.toLocaleDateString("en-GB");
                    }
                    if (item.report_Date) {
                        const reportDateObj = new Date(item.report_Date);
                        reportDate = reportDateObj.toLocaleDateString("en-GB");
                    }
                    if (item.date) {
                        const dateObj = new Date(item.date);
                        date = dateObj.toLocaleDateString("en-GB");
                    }

                    tabledata.push({
                        Sr_No: index + 1,
                        Id: item.id,
                        Complaint_No: item.complaint_No,
                        Complaint_Type: item.complaint_Type,
                        Report_Date: reportDate,
                        Cust_Name_Location: item.cust_Name_Location,
                        Source_Complaint: item.source_Complaint,
                        Prod_Code_Desc: item.prod_Code_Desc,
                        Desc_Complaint: item.desc_Complaint,
                        Batch_Code: item.batch_Code,
                        Pkd: item.pkd,
                        Supp_Qty: item.supp_Qty,
                        Failure_Qty: item.failure_Qty,
                        Problem_State: item.problem_State,
                        Description: item.description,
                        Complaint_History: item.complaint_History,
                        Root_Cause_Anal: toDisplayHtml(item.root_Cause_Anal),
                        Root_Cause_Day: item.root_Cause_Day,

                        Corrective_Action: toDisplayHtml(item.corrective_Action),
                        Corrective_Action_Day: item.corrective_Action_Day,

                        Date: date,
                        Closure_Day: item.closure_Day,
                        ProblemBasket: item.issue_Problems,
                        CreatedDate: formattedDate,
                        CreatedBy: item.createdBy,
                        UpdatedBy: item.updatedBy,
                        UpdatedDate: updatedDate,

                        CapaReportAttachments: item.capaReportAttachments
                    });
                });
            }

            columns.push(
                {
                    title: "Sr No",
                    field: "Sr_No",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Complaint No.",
                    field: "Complaint_No",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Reported Date",
                    field: "Report_Date",
                    headerFilter: "input",
                    hozAlign: "center",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Complaint Type",
                    field: "Complaint_Type",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Customer Name & Location",
                    field: "Cust_Name_Location",
                    headerFilter: "input",
                    hozAlign: "left",
                    headerHozAlign: "center",
                    headerMenu: headerMenu
                },
                {
                    title: "Source of Complaint",
                    field: "Source_Complaint",
                    headerFilter: "input",
                    hozAlign: "left",
